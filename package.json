{
  "name": "maplibre-gl-geo-editor",
  "version": "0.7.2",
  "description": "Advanced geometry editing plugin for MapLibre GL with Geoman integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/types/react.d.ts",
        "default": "./dist/react.mjs"
      },
      "require": {
        "types": "./dist/types/react.d.ts",
        "default": "./dist/react.cjs"
      }
    },
    "./style.css": "./dist/maplibre-gl-geo-editor.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:examples": "vite build --config vite.examples.config.ts",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "maplibre",
    "maplibre-gl",
    "geoman",
    "geometry-editor",
    "drawing",
    "editing",
    "gis",
    "react",
    "typescript",
    "turf"
  ],
  "author": "Qiusheng Wu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opengeos/maplibre-gl-geo-editor.git"
  },
  "peerDependencies": {
    "@geoman-io/maplibre-geoman-free": ">=0.5.0",
    "maplibre-gl": ">=3.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@turf/turf": "^7.3.4",
    "maplibre-gl-layer-control": "^0.13.0"
  },
  "devDependencies": {
    "@geoman-io/maplibre-geoman-free": "^0.6.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.0.0",
    "jsdom": "^28.0.0",
    "maplibre-gl": "^5.17.0",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
